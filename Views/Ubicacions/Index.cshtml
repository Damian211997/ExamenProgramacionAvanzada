@model IEnumerable<ExamenProgramacionAvanzada.Models.Ubicacion>

@{
    ViewData["Title"] = "Ubicaciones";
}

<div class="container-fluid dashboard-container py-5 bg-white">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card main-card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h1 class="display-4 mb-0">Ubicaciones</h1>
                </div>
                <div class="card-body p-5">
                    <div class="row mb-4">
                        <div class="col-12 text-end">
                            <a asp-action="Create" class="btn btn-outline-primary">
                                <i class="fas fa-plus me-2"></i>Nuevo Ubicación
                            </a>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr class="bg-light">
                                    <th>Nombre</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                                    <i class="fas fa-edit me-1"></i>Editar
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-info-circle me-1"></i>Detalles
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash me-1"></i>Eliminar
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .dashboard-container {
        min-height: 100vh;
        background-color: #ffffff;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .table-hover tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.1);
        transition: background-color 0.3s ease;
    }

    .btn-group .btn {
        display: flex;
        align-items: center;
        transition: all 0.3s ease;
    }

        .btn-group .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
</style>

<!-- Incluye Font Awesome para los íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
