@model ExamenProgramacionAvanzada.Models.Proveedor
@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<div class="container-fluid dashboard-container py-5 bg-white">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card main-card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h1 class="display-4 mb-0">Eliminar Proveedor</h1>
                </div>
                <div class="card-body p-5">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        ¿Está seguro que desea eliminar este proveedor? Esta acción no se puede deshacer.
                    </div>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <dl class="row">
                                <div class="col-md-6 mb-3">
                                    <dt class="text-muted">RUT</dt>
                                    <dd class="h5">@Html.DisplayFor(model => model.Rut)</dd>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <dt class="text-muted">Nombre</dt>
                                    <dd class="h5">@Html.DisplayFor(model => model.Nombre)</dd>
                                </div>
                                <div class="col-12">
                                    <dt class="text-muted">Ubicación</dt>
                                    <dd class="h5">@Html.DisplayFor(model => model.Ubicacion.Nombre)</dd>
                                </div>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Eliminar Proveedor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos -->
<style>
    .dashboard-container {
        min-height: 100vh;
        background-color: #ffffff;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card-body dl dt {
        margin-bottom: 0.5rem;
    }

    .card-body dl dd {
        margin-bottom: 1rem;
    }
</style>

<!-- Incluye Font Awesome para los íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">