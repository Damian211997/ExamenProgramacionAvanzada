@model ExamenProgramacionAvanzada.Models.Proveedor
@{
    ViewData["Title"] = "Detalles del Proveedor";
}

<div class="container-fluid dashboard-container py-5 bg-white">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card main-card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h1 class="display-4 mb-0">Detalles del Proveedor</h1>
                </div>
                <div class="card-body p-5">
                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-id-card me-3 text-muted"></i>
                                        <dt class="text-muted me-2">RUT:</dt>
                                        <dd class="h5 mb-0">@Html.DisplayFor(model => model.Rut)</dd>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-user me-3 text-muted"></i>
                                        <dt class="text-muted me-2">Nombre:</dt>
                                        <dd class="h5 mb-0">@Html.DisplayFor(model => model.Nombre)</dd>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-map-marker-alt me-3 text-muted"></i>
                                        <dt class="text-muted me-2">Ubicación:</dt>
                                        <dd class="h5 mb-0">@Html.DisplayFor(model => model.Ubicacion.Nombre)</dd>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Volver
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos -->
<style>
    .dashboard-container {
        min-height: 100vh;
        background-color: #ffffff;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card-body .row .col-md-6 {
        display: flex;
        align-items: center;
    }

    .card-body dt,
    .card-body dd {
        margin-bottom: 0;
    }

    .card-body i {
        font-size: 1.5rem;
        opacity: 0.7;
    }
</style>

<!-- Incluye Font Awesome para los íconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">