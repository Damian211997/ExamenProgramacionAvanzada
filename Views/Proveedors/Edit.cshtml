@model ExamenProgramacionAvanzada.Models.Proveedor
@{
    ViewData["Title"] = "Edit Provider";
}

<div class="container-fluid py-5 bg-white">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-gradient-primary text-white text-center">
                    <h3 class="font-weight-light my-2">Editar Proveedor</h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Rut" class="form-label fw-bold">RUT</label>
                            <input asp-for="Rut" class="form-control" placeholder="Ingrese RUT" required />
                            <div class="invalid-feedback">
                                Por favor, ingrese un RUT válido.
                            </div>
                            <span asp-validation-for="Rut" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del proveedor" required />
                            <div class="invalid-feedback">
                                Por favor, ingrese un nombre de proveedor.
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="UbicacionId" class="form-label fw-bold">Ubicación</label>
                            <select asp-for="UbicacionId" class="form-select" asp-items="ViewBag.UbicacionId" required>
                                <option value="">Seleccione Ubicación</option>
                            </select>
                            <div class="invalid-feedback">
                                Por favor, seleccione una ubicación.
                            </div>
                            <span asp-validation-for="UbicacionId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Validación personalizada del formulario
        (function () {
            'use strict';
            window.addEventListener('load', function () {
                var forms = document.getElementsByClassName('needs-validation');
                var validation = Array.prototype.filter.call(forms, function (form) {
                    form.addEventListener('submit', function (event) {
                        if (form.checkValidity() === false) {
                            event.preventDefault();
                            event.stopPropagation();
                        }
                        form.classList.add('was-validated');
                    }, false);
                });
            }, false);
        })();
    </script>
}